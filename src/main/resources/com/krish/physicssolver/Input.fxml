<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krish.physicssolver.controllers.InputController">
   <top>
      <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
